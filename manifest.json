{
  "manifest_version": 3,
  "name": "Conventional Comments (GitHub) - forked from Pullpo",
  "version": "0.1.0",
  "description": "Helps format code review comments on GitHub using the Conventional Comments standard.",
  "action": {
    "default_popup": "src/popups/default.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": ["storage"],
  "host_permissions": ["*://github.com/*"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "assets/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://github.com/*"],
      "exclude_matches": ["*://github.com/login*"],
      "js": ["assets/content.js"],
      "css": ["assets/style.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["popups/*", "assets/*"],
      "matches": ["https://github.com/*"]
    }
  ]
}
