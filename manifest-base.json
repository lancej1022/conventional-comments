{
  "manifest_version": 3,
  "name": "Conventional Comments (GitHub) - by Pullpo",
  "version": "0.2.1",
  "description": "Helps format code review comments on GitHub using the Conventional Comments standard.",
  "action": {},
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://api.pullpo.io/*",
    "*://github.com/*",
    "*://gitlab.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://github.com/*",
        "*://gitlab.com/*"
      ],
      "exclude_matches": [ "*://github.com/login*" ],
      "js": ["content.js"],
      "css": ["style.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "assets/slack_icon.svg" ],
      "matches": [ "https://github.com/*", "https://gitlab.com/*" ]
    }
  ]
} 